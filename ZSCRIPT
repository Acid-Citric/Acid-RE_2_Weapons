#include "ZScript/Powerups/Inventory.zsc"

mixin Class RE_AmmoPickupMessage
{
	Override String PickupMessage()
	{
		If(Amount == 1) return String.Format("%s (+%d)",GetTag(),Amount);
		Else return String.Format("%ss (+%d)",GetTag(),Amount);	
	}
}


