#include "Decorate/FlameRound.txt"
#include "Decorate/AcidRound.txt"
#include "Decorate/FreezeRound.txt"

ACTOR M79GrenadeProj
{
	Radius 8
	Height 8
	Speed 30
	Damage 27
	Projectile
	-NOGRAVITY
	+RANDOMIZE
	+DEHEXPLOSION
	+CANBOUNCEWATER
	+BRIGHT
	Gravity 0.4
    DeathSound "Weapons/M79/Grenade"
	Obituary "%k played some hot ball toss at %o."
	Scale 0.3
	States
	{
	Spawn:
		GRND A 1
		Loop
	Death:
		TNT1 A 0 A_JumpIf(WaterLevel >= 2, "UnderWater")
		TNT1 A 0
		TNT1 A 0 { A_Explode(128,128,XF_HURTSOURCE); A_ChangeFlag(NOGRAVITY,TRUE); A_AlertMonsters; }
		TNT1 AAAAAAAAAAA 0 A_CustomMissile("Explarticles", 0, 0, random (0, 360), 2, random (0, 360))
		TNT1 A 0 A_SetTranslucent(0.65,1)
		ARX4 ABC 2 Bright A_SetScale(1.0)
		"####" DEF 2 Bright A_SetScale(1.05)
		"####" GHI 2 Bright A_SetScale(1.1)
		"####" JKL 2 Bright A_SetScale(1.15)
		"####" MNO 2 Bright A_SetScale(1.2)
		Stop
	UnderWater:
		TNT1 A 0 A_Explode(128,32)
		Stop
	}
}

Actor ExploSmokes
{
	PROJECTILE 
	Radius 1
	Height 1
	Speed 2
	Damage 0
	+NOBLOCKMAP
	+THRUACTORS
	Scale 0.55
	States
	{
	Spawn:
		TNT1 A 1
		ARX3 ABCD 4 A_SetTranslucent(0.45,1)
		ARX3 EFGHIJ 4 A_FadeOut(0.05,1)
		Stop
	}
}

ACTOR ExplarticleSmoke
{
	+NOGRAVITY
	+NOBLOCKMAP
	+FLOORCLIP
	+FORCEXYBILLBOARD
	+NOINTERACTION
	+MISSILE
	RenderStyle "Add"
	Alpha 0.8
	Speed 1
	Radius 0
	Height 0
	Scale 0.2
	States
	{
    Spawn:
        TNT1 A 1 A_SetTranslucent(0.45)
        ARX3 ABCDEFGHIJ 2 A_FadeOut(0.005)
		TNT1 A 0
        Stop
    }
}

ACTOR Explarticles
{
	RenderStyle "Add"
	Scale 0.03
	PROJECTILE
	-NOGRAVITY
	Speed 12
	Gravity 0.65
	Radius 2
	Height 2
	States
	{
	Spawn:
		TNT1 A 0
		TNT1 A 1 A_SpawnItem("ExplarticleSmoke")
		Stop
	}
}

